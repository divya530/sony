@model AppLabs.Models.Marketer

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm("Save", "Marketers"))
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.EmployerName, htmlAttributes: new { @class = "control-label col-md-2" }):

            <div class="col-md-9">
                @Html.DropDownListFor(model => model.EmployerName, new SelectList(ViewBag.Sai, "Value", "Text"), "--Select Employee--", new { @class = "form-control" })

                @*@Html.DropDownList("items", null, "Select Employee", new { @class = "form-control" })*@


                @*@Html.DropDownList("Sai", "Select Employe")*@




                @Html.ValidationMessageFor(c => c.EmployerName, "", new { @class = "text-danger" })

            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(m => m.MarketerName, "Marketer Name", htmlAttributes: new { @class = "control-label col-md-2" }):

            <div class="col-md-9">
                @*@Html.DropDownList("items1", null, "Select Marketer", new { @class = "form-control" })*@
                @*@Html.DropDownList("Name", "Select Marketer")*@
                @Html.DropDownListFor(model => model.MarketerName, new SelectList(ViewBag.Name, "Value", "Text"), "--Select Marketer--", new { @class = "form-control" })

                @Html.ValidationMessageFor(c => c.MarketerName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StartDate, htmlAttributes: new { @class = "control-label col-md-2" }):

            <div class="col-md-9">
                @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" }):

            <div class="col-md-9">
                @Html.DropDownListFor(m => m.Status,
                new List<SelectListItem>{
             new SelectListItem { Text = "Open", Value = "Open" },
             new SelectListItem {Text="Closed",Value="Closed"}}, "Select Status", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </div>
        </div>





        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
